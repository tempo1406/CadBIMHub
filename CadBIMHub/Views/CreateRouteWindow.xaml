<Window x:Class="CadBIMHub.Views.CreateRouteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CadBIMHub.ViewModels"
        Title="Tạo lộ" 
        Height="550" 
        Width="800"
        MinHeight="550"
        MinWidth="800"
        WindowStartupLocation="CenterScreen"
        Background="White">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CadBIMHub;component/Resources/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid Margin="10">
        <TabControl Background="White" BorderBrush="#dee2e6">

            <TabItem Header="Thông tin lộ" FontSize="13" Padding="10,5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,0,0,10">
                        <Button Content="Import" Width="100" Height="32" 
                    Margin="0,0,10,0"
                    Style="{StaticResource BtnYellowFilled}"
                    Command="{Binding ImportCommand}"/>
                        <Button Content="Tạo mới" Width="100" Height="32"
                    Style="{StaticResource BtnGreenOutline}"
                    Command="{Binding CreateNewCommand}"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Đã chọn" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Border Background="#3f51b5" CornerRadius="10" Padding="8,2" MinWidth="24" Height="24">
                            <TextBlock Text="{Binding SelectedCount}" Foreground="White" 
                           FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Button Content="Xóa" Width="70" Height="28" Margin="15,0,0,0"
                                Command="{Binding DeleteCommand}"
                                IsEnabled="{Binding HasItemsSelected}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource BtnGreyOutline}">
                                    <Setter Property="Background" Value="#9e9e9e"/>
                                    <Setter Property="BorderBrush" Value="#9e9e9e"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasItemsSelected}" Value="True">
                                            <Setter Property="Background" Value="#dc3545"/>
                                            <Setter Property="BorderBrush" Value="#dc3545"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>

                    <DataGrid Grid.Row="2" 
                  x:Name="dgRouteDetails"
                  ItemsSource="{Binding RouteDetailList}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  BorderThickness="1"
                  BorderBrush="#e0e0e0"
                  RowHeaderWidth="0"
                  Background="White"
                  RowHeight="45">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridCell">
                                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGridCell">
                                            <Border Background="{TemplateBinding Background}" BorderThickness="0">
                                                <ContentPresenter VerticalAlignment="Center" />
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            
                            <Style x:Key="InputBorderStyle" TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                                <Setter Property="BorderBrush" Value="#ccc"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Margin" Value="4,2"/>
                                <Setter Property="Background" Value="White"/>
                            </Style>
                        </DataGrid.Resources>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#f1f1f1"/>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="8,8"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="40">
                                <DataGridTemplateColumn.HeaderTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  Command="{Binding DataContext.ToggleSelectAllCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                                  CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}"
                                                  ToolTip="Select All"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.HeaderTemplate>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Tên lộ" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding RouteName, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Batch" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding BatchNo, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Nhóm vật tư" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding ItemGroup, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Vật tư" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding ItemDescription, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Kích thước" Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding Size, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Ký hiệu" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Header="Số lượng" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource InputBorderStyle}">
                                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                                     BorderThickness="0" Background="Transparent"
                                                     VerticalContentAlignment="Center" Padding="4"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTemplateColumn Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Button Width="26" Height="26" Margin="2,0"
                                        Background="#dc3545" BorderThickness="0"
                                        Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Xóa">
                                                <TextBlock Text="&#xE74D;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="12"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            <Button Width="26" Height="26" Margin="2,0"
                                        Background="Black" BorderThickness="0"
                                        Command="{Binding DataContext.CopyRowCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding}"
                                        ToolTip="Sao chép">
                                                <TextBlock Text="&#xE8C8;" FontFamily="Segoe MDL2 Assets" Foreground="White" FontSize="12"/>
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
                        <Button Content="Gán" Width="100" Height="35" 
                                Margin="0,0,10,0"
                                Command="{Binding AssignCommand}"
                                IsEnabled="{Binding HasChanges}">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource BtnGreyOutline}">
                                    <Setter Property="Background" Value="#9e9e9e"/>
                                    <Setter Property="BorderBrush" Value="#9e9e9e"/>
                                    <Setter Property="Foreground" Value="#666"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding HasChanges}" Value="True">
                                            <Setter Property="Background" Value="#3f51b5"/>
                                            <Setter Property="BorderBrush" Value="#3f51b5"/>
                                            <Setter Property="Foreground" Value="White"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                        <Button Content="Đóng" Width="100" Height="35"
                    Style="{StaticResource BtnRedFilled}"
                    Command="{Binding CloseCommand}"/>
                    </StackPanel>

                </Grid>
            </TabItem>

            <TabItem Header="Thông tin bổ sung" FontSize="13" Padding="10,5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Điều kiện lắp đặt" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,8"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Height="28" Margin="0,8"
                              ItemsSource="{Binding DieuKienLapDatList}"
                              SelectedItem="{Binding SelectedDieuKien}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Không gian lắp đặt" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,8"/>
                    <ComboBox Grid.Row="1" Grid.Column="1" Height="28" Margin="0,8"
                              ItemsSource="{Binding KhongGianLapDatList}"
                              SelectedItem="{Binding SelectedKhongGian}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Gói công việc" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,8"/>
                    <ComboBox Grid.Row="2" Grid.Column="1" Height="28" Margin="0,8"
                              ItemsSource="{Binding GoiCongViecList}"
                              SelectedItem="{Binding SelectedGoiCongViec}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Giai đoạn" 
                               FontWeight="SemiBold"
                               VerticalAlignment="Center" Margin="0,8"/>
                    <ComboBox Grid.Row="3" Grid.Column="1" Height="28" Margin="0,8"
                              ItemsSource="{Binding GiaiDoanList}"
                              SelectedItem="{Binding SelectedGiaiDoan}"/>

                    <Button Grid.Row="4" Grid.Column="1" Content="Lưu batch" 
                            Width="100" Height="32" Margin="0,15,0,0"
                            HorizontalAlignment="Right"
                            Style="{StaticResource BtnGreenOutline}"
                            Command="{Binding SaveBatchCommand}"/>

                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" 
                            Margin="0,15,0,0" BorderThickness="1" BorderBrush="#ddd">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#f8f9fa" BorderBrush="#ddd" BorderThickness="0,0,0,1">
                                <TextBlock Text="Danh s&#xE1;ch Batch" 
                                           FontWeight="Bold" FontSize="14"
                                           Margin="10"/>
                            </Border>

                            <DataGrid Grid.Row="1" 
                                      ItemsSource="{Binding BatchList}"
                                      AutoGenerateColumns="False"
                                      CanUserAddRows="False"
                                      CanUserDeleteRows="False"
                                      HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal"
                                      BorderThickness="0"
                                      RowHeaderWidth="0"
                                      IsReadOnly="True"
                                      Background="White">
                                <DataGrid.ColumnHeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Background" Value="White"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Padding" Value="10,8"/>
                                        <Setter Property="BorderBrush" Value="#eee"/>
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                    </Style>
                                </DataGrid.ColumnHeaderStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã batch" Binding="{Binding BatchCode}" Width="*"/>
                                    <DataGridTextColumn Header="Điều kiện lắp đặt" Binding="{Binding InstallationCondition}" Width="*"/>
                                    <DataGridTextColumn Header="Không gian lắp đặt" Binding="{Binding InstallationSpace}" Width="*"/>
                                    <DataGridTextColumn Header="Gói công việc" Binding="{Binding WorkPackage}" Width="*"/>
                                    <DataGridTextColumn Header="Giai đoạn" Binding="{Binding Phase}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
