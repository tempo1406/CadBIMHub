<Window x:Class="CadBIMHub.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Đăng nhập" 
    Height="300" 
    Width="400"
    MinHeight="300"
    MinWidth="400"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    Background="#F5F5F5">
<Grid Margin="20">
    <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="15"/>
        <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Đăng nhập hệ thống" 
                   FontSize="18" 
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Foreground="#333"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Tên đăng nhập:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" 
                     Height="30" 
                     FontSize="14"
                     Padding="5"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Mật khẩu:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <PasswordBox x:Name="txtPassword" 
                             Grid.Column="0"
                             Height="30" 
                             FontSize="14"
                             Padding="5"
                             PasswordChanged="txtPassword_PasswordChanged"/>
                
                <TextBox x:Name="txtPasswordVisible" 
                         Grid.Column="0"
                         Height="30" 
                         FontSize="14"
                         Padding="5"
                         Visibility="Collapsed"
                         TextChanged="txtPasswordVisible_TextChanged"/>
                
                <Button x:Name="btnTogglePassword"
                        Grid.Column="1"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        BorderThickness="0.7"
                        Cursor="Hand"
                        Click="btnTogglePassword_Click"
                        ToolTip="Hien/An mat khau">
                    <TextBlock x:Name="iconEye" 
                               Text="&#xED1A;" 
                               FontFamily="Segoe MDL2 Assets" 
                               FontSize="16"
                               Foreground="#666"/>
                </Button>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="8" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="btnLogin" 
                    Content="Đăng nhập" 
                    Width="100" 
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#007ACC"
                    Foreground="White"
                    FontWeight="SemiBold"
                    FontSize="13"
                    Click="btnLogin_Click"/>
            <Button x:Name="btnCancel" 
                    Content="Hủy" 
                    Width="100" 
                    Height="35"
                    Background="#E0E0E0"
                    Foreground="#333"
                    FontWeight="SemiBold"
                    FontSize="13"
                    Click="btnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
