<Window x:Class="CadBIMHub.Views.CreateAttributeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:CadBIMHub.ViewModels"
        Title="Tạo thuộc tính" 
        Height="700" 
        Width="650"
        MinHeight="700"
        MinWidth="650"
        WindowStartupLocation="CenterScreen"
        Background="White">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/CadBIMHub;component/Resources/Buttons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Thông tin lộ" FontWeight="Bold" FontSize="14"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Tên lộ" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox Grid.Column="1" Height="32"
                                      ItemsSource="{Binding RouteNameList}"
                                      SelectedItem="{Binding SelectedRouteName}"
                                      VerticalContentAlignment="Center"
                                      Padding="8,0"/>
                        </Grid>
                </Grid>
            </Border>

            <Border Grid.Row="1" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="4" Padding="15" Margin="0,0,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <TextBlock Text="Thông tin thuộc tính" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            <Button Content="Tạo mới" 
                                    Width="100" 
                                    Height="32" 
                                    HorizontalAlignment="Right"
                                    Style="{StaticResource BtnGreenOutline}"
                                    Command="{Binding CreateNewCommand}"/>
                        </Grid>

                        <Border Grid.Row="2" BorderBrush="#e0e0e0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Background="#f5f5f5" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="10,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="40"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="Ký hiệu *" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                        <TextBlock Grid.Column="2" Text="Số lượng *" FontWeight="SemiBold" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="250">
                                    <ItemsControl ItemsSource="{Binding AttributeDetailList}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="10,8" Background="White">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="10"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="10"/>
                                                            <ColumnDefinition Width="40"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox Grid.Column="0"
                                                                 Text="{Binding Symbol, UpdateSourceTrigger=PropertyChanged}"
                                                                 Height="32"
                                                                 VerticalContentAlignment="Center"
                                                                 Padding="8,0"
                                                                 BorderBrush="#ccc"/>

                                                        <TextBox Grid.Column="2"
                                                                 Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                                                                 Height="32"
                                                                 VerticalContentAlignment="Center"
                                                                 Padding="8,0"
                                                                 BorderBrush="#ccc"/>

                                                        <Button Grid.Column="4" 
                                                                Width="32" 
                                                                Height="32" 
                                                                Background="#dc3545"
                                                                BorderThickness="0"
                                                                VerticalAlignment="Center"
                                                                Command="{Binding DataContext.DeleteRowCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                CommandParameter="{Binding}"
                                                                ToolTip="Xóa">
                                                            <TextBlock Text="&#xE74D;" 
                                                                       FontFamily="Segoe MDL2 Assets" 
                                                                       Foreground="White" 
                                                                       FontSize="14"/>
                                                            <Button.Template>
                                                                <ControlTemplate TargetType="Button">
                                                                    <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                    </Border>
                                                                </ControlTemplate>
                                                            </Button.Template>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

            <Border Grid.Row="2" BorderBrush="#dee2e6" BorderThickness="1" CornerRadius="4" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Chọn đối tượng" FontWeight="Bold" FontSize="14" Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Content="Theo đối tượng" 
                                         IsChecked="{Binding IsSelectByObject}"
                                         GroupName="SelectionMode"
                                         Margin="0,0,20,0"
                                         VerticalAlignment="Center"/>
                            <RadioButton Content="Theo layer" 
                                         IsChecked="{Binding IsSelectByLayer}"
                                         GroupName="SelectionMode"
                                         VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <Button Content="Chọn đối tượng..." 
                                    Width="150" 
                                    Height="32"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource BtnGreyOutline}"
                                    Command="{Binding SelectObjectCommand}"/>
                            
                            <TextBlock Text="{Binding SelectedObjectCountText}" 
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       FontStyle="Italic"
                                       Foreground="#666"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
        </Grid>

        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#dee2e6" 
                BorderThickness="0,1,0,0"
                Padding="20,15,20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Gán" 
                        Width="100" 
                        Height="35"
                        Margin="0,0,10,0"
                        Style="{StaticResource BtnBlueFilled}"
                        Command="{Binding AssignCommand}"/>
                <Button Content="Đóng" 
                        Width="100" 
                        Height="35"
                        Style="{StaticResource BtnRedFilled}"
                        Command="{Binding CloseCommand}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
